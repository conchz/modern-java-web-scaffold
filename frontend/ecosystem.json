{
  "apps": {
    "name": "MJWS-Frontend",
    "script": "app.js",
    "env": {
      "COMMON_VARIABLE": "true"
    },
    "env_production": {
      "NODE_ENV": "production"
    }
  },
  "deploy": {
    "production": {
      "user": "root",
      "host": [
        "10.116.75.148"
      ],
      "ref": "origin/master",
      "repo": "https://github.com/dolphineor/modern-java-web-scaffold.git",
      "path": "/var/www/production",
      "pre-deploy-local": "echo 'This is a local executed command'",
      "post-deploy": "gradle :frontend:npm_install npmDeploy && pm2 startOrRestart ecosystem.json --env production",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "user": "root",
      "host": "127.0.0.1",
      "ref": "origin/master",
      "repo": "https://github.com/dolphineor/modern-java-web-scaffold.git",
      "path": "/var/www/development",
      "post-deploy": "gradle :frontend:npm_install npmBuild && pm2 startOrRestart ecosystem.json --env dev",
      "env": {
        "NODE_ENV": "dev"
      }
    }
  }
}
